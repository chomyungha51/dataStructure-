#include <stdio.h>
#include <string.h>

int main()
{
    char word[30];               
    int length;                  
    int TureorNot = true;    

    printf("단어를 입력하세요: ");
    scanf("%s", word);

    length = strlen(word);
    
    for (int i = 0; i < length / 2; i++)
    {
   
        if (word[i] != word[length - 1 - i])
        {
            TrueorNot = false;
            break;
        }
    }

    printf("%d\n", TrueorNot);   
    return 0;
}
